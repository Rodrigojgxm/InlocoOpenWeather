<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="38dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/name_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/max_temp_text"
        android:layout_below="@+id/name_info"
        android:layout_alignStart="@+id/name_info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/max_temp_text"
        android:layout_toEndOf="@+id/max_temp_text"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:id="@+id/max_temp_value" />

    <TextView
        android:text="@string/min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_temp_text"
        android:layout_toStartOf="@+id/max_temp_value"
        android:layout_marginTop="38dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/min_temp_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/min_temp_text"
        android:layout_alignStart="@+id/max_temp_value"
        android:textSize="18sp"
        android:id="@+id/min_temp_value" />

    <TextView
        android:text="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_temp_text"
        android:layout_alignEnd="@+id/min_temp_text"
        android:layout_marginTop="38dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/description_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description_text"
        android:layout_alignStart="@+id/min_temp_value"
        android:textSize="18sp"
        android:id="@+id/description_value" />


</RelativeLayout>
